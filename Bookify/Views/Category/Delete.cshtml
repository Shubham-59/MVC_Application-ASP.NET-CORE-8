    @*   //How this work asp-action related ti index.cshtml  *@
<form method="post" class="custom-form">

    <input asp-for="Id" hidden />

    <div class="mb-3 row">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" disabled class="form-control" />
       
    </div>
    <div class="mb-3 row">
        <label asp-for="DisplayOrder" class="form-label"></label>
        <input asp-for="DisplayOrder" disabled class="form-control" />
       </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Category" asp-action="Index" class="btn btn-success form-control">Back</a>
        </div>
    </div>
</form>

