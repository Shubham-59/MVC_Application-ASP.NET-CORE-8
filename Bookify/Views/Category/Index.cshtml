@model List<Category>
@if(TempData["success"]!=null)
{
    <h3>@TempData["success"]</h3>
}
<div class="container">
    <div class="row pt-4">
        <div class="col-6">

            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">

            <a asp-controller="Category" asp-action="Create" class="btn btn-warning btn-circle mb-2" style="border-radius: 10px;">

              
                <i class="bi bi-plus-circle"></i>
               <h7 style="color:black; font-weight:800">New Category</h7>
            </a>
        </div>

    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-success m-1">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger m-1">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>


    </table>

</div>
